<Window x:Class="UtilitiesApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UtilitiesApp.Views"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight"
        >
    <WrapPanel Orientation="Vertical">
        <Label FontSize="25" HorizontalAlignment="Center">Приложение для ОСББ</Label>
        <Label FontSize="12" HorizontalAlignment="Center">(укр. об'єднання співвласників багатоквартирного будинку)</Label>
        <Button x:Name="OpenAddressesList" FontSize="25" Click="OpenAddressesList_Click">адреса</Button>
        <Button x:Name="OpenContractsList" FontSize="25" Click="OpenContractsList_Click">договора</Button>
        <Button x:Name="OpenUtilitiesList" FontSize="25" Click="OpenUtilitiesList_Click">комунальные услуги</Button>
        <Button x:Name="OpenBillsList" FontSize="25" Click="OpenBillsList_Click">счета</Button>
        <!--<Button x:Name="OpenPaymentList" FontSize="25" Click="OpenPaymentList_Click">оплаты</Button>-->
    </WrapPanel>
</Window>
